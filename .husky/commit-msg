#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

message="$(cat $1)"
requiredPattern="^HK-[0-9]{1,3}"
if ! [[ $message =~ $requiredPattern ]];
then
  echo "----------------------------------------------------"
  echo "----------------------------------------------------"
  echo "----------------------------------------------------"
  echo "----The commit message must start with HK- prefix----"
  echo "----------------------------------------------------"
  echo "----------------------------------------------------"
  echo "----------------------------------------------------"
  exit 1
fi